#include <stdio.h>
#include <string.h>
int main(){

struct Alunos{
int matricula;
char nome[50];
int codDisc;
double nota1;
double nota2;
};
struct Alunos a1[2];
double media[2];
int i;
for (i = 0; i < 2; i++){
printf("Insira numero matricula: \n");
scanf(" %d",&a1[i].matricula);
printf("Insira um nome: \n");
scanf(" %[^\n]",a1[i].nome);
printf("Insira o codigo da disciplina: \n");
scanf(" %d", &a1[i].codDisc);
printf("Insira a primeira nota: \n");
scanf(" %lf",&a1[i].nota1);
printf("Insira a segunda nota: \n");
scanf(" %lf",&a1[i].nota2);
media[i] = (a1[i].nota1*1.0 + a1[i].nota2*2.0)/3.0;
}

for (i = 0; i < 2; i++) {
  printf("Aluno %s, numero %d, na disciplina %d, obteve a mÃ©dia: %.2lf\n",a1[i].nome, a1[i].matricula, a1[i].codDisc, media[i]);
}

  return 0;
}
