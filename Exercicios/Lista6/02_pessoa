#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {

struct Pessoa{
  char nome[50];
  int idade;
  char endereco[50];
};
struct Pessoa p;

printf("Insira um nome: \n");
scanf("%[^\n]",p.nome);
printf("Insira uma idade: \n");
scanf(" %d",&p.idade);
printf("Insira o endereço: \n");
scanf(" %[^\n]", p.endereco);

printf("Nome: %s, Idade: %d, Endereço: %s\n",p.nome, p.idade, p.endereco );
    return 0;
}
