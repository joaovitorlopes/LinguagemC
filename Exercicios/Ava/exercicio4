#include <stdio.h>
#include <string.h>

int main(){
char letra1, letra2,frase[50];
int i = 0;
printf("Insira uma letra: \n");
scanf(" %c",&letra1);
printf("Insira uma letra que ir√° substituir: \n");
scanf(" %c",&letra2);
printf("Insira uma frase: \n");
scanf("%s",frase);
while(frase[i] != '\0'){
 if(frase[i] == letra1){
    frase[i] = letra2;
 }	
i++;
}
printf("%s\n",frase);
return 0;
}

